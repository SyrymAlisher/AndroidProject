<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="more_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">#1D6FE9</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20sp</item>
        <!--    <item name="android:background">#b8bfbd</item>-->
        <item name="android:strokeColor"> #000000</item>
        <item name="android:background">#eff3f2</item>

        <item name="android:onClick">onClick</item>
        <item name="android:fontFamily">Google Fonts-Rubik Regular</item>
    </style>
    <style name="calc_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">32sp</item>
        <!--        <item name="android:background">#b8bfbd</item>-->
        <item name="android:strokeColor"> #000000</item>
        <item name="android:background">#eff3f2</item>
        <item name="android:textColor">#171616</item>
        <item name="android:fontFamily">Google Fonts-Rubik Regular </item>
    </style>

    <style name="calc_button1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:onClick">onClick</item>
        <item name="android:fontFamily">Google Fonts-Rubik Regular</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#434343</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>
    <style name="more_button1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#636363</item>
        <item name="android:onClick">onClick</item>
        <item name="android:fontFamily">Google Fonts-Rubik Regular</item>
    </style>

    <style name="land_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#107C61</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#1DE9B6</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:fontFamily">Google Fonts-Rubik Regular</item>
    </style>

</resources>
