<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_weight="1"

    >


    <EditText
        android:id="@+id/CajaTexto"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="8"
        android:inputType="number"

        android:textColorLink="@android:color/background_light"
        android:textSize="30sp" />
    <!--- primera colunma de botones -->
    <Button
        android:id="@+id/BotonPunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:background="@color/colorAccent"
        android:onClick="onClick"
        android:text="."
        android:textColor="#fff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:background="#848484"
        android:onClick="onClick"
        android:text="1"
        android:textColor="#ffff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Boton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:background="#848484"
        android:onClick="onClick"
        android:text="4"
        android:textColor="#ffff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Boton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:background="#848484"
        android:onClick="onClick"
        android:text="7"
        android:textColor="#ffff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonVacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"

        android:background="#848484"
        android:onClick="onClick"
        android:text=""
        android:textColor="#ffff"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonSIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="1"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text="SIN"
        android:textColor="#6E6E6E"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonCSC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_row="2"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text="CSC"
        android:textColor="#6E6E6E"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonOFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"

        android:layout_row="4"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text="OFF"
        android:textColor="#6E6E6E"

        tools:ignore="HardcodedText" />
    <!--- Segunda columna de botones -->
    <Button
        android:id="@+id/BotonC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:background="@color/colorAccent"

        android:onClick="onClick"

        android:text="C"
        android:textColor="#fff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Boton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:background="#848484"
        android:onClick="onClick"
        android:text="3"
        android:textColor="#ffff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Boton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="3"
        android:background="#848484"
        android:onClick="onClick"
        android:text="6"
        android:textColor="#ffff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Boton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="4"
        android:background="#848484"
        android:onClick="onClick"
        android:text="9"
        android:textColor="#ffff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonVacio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="5"
        android:background="#848484"
        android:onClick="onClick"
        android:text=""
        android:textColor="#ffff"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/BotonVacio5"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_row="4"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text=""
        android:textColor="#6E6E6E"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonVacio6"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_row="5"
        android:background="#A4A4A4"
        android:onClick="onClick"
        android:text=""
        android:textColor="#6E6E6E"
        tools:ignore="HardcodedText" />
    <Button
        android:id="@+id/BotonTAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="3"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text="TAN"
        android:textColor="#6E6E6E"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonCOT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_row="3"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text="COT"
        android:textColor="#6E6E6E"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonCuadrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="4"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text="X^"
        android:textColor="#6E6E6E"

        tools:ignore="HardcodedText" />


    <!--- tercera columna de botones -->
    <Button
        android:id="@+id/BotonParentesis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:background="@color/colorAccent"
        android:onClick="onClick"
        android:text="( )"
        android:textColor="#fff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:background="#848484"
        android:onClick="onClick"
        android:text="2"
        android:textColor="#ffff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Boton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:background="#848484"
        android:onClick="onClick"
        android:text="5"
        android:textColor="#ffff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Boton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:background="#848484"
        android:onClick="onClick"
        android:text="8"
        android:textColor="#ffff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Boton0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:background="#848484"
        android:onClick="onClick"
        android:text="0"
        android:textColor="#ffff"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonCOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="2"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text="COS"
        android:textColor="#6E6E6E"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonSEC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_row="1"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:textColor="#6E6E6E"
        android:text="SEC"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonFactorial"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_row="3"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text="X!"
        android:textColor="#6E6E6E"

        tools:ignore="HardcodedText" />
    <!--- Cuarta columna de botones -->
    <Button
        android:id="@+id/BotonDEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="1"
        android:background="@color/colorAccent"
        android:onClick="onClick"
        android:text="DEL"
        android:textColor="#fff"


        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BtnMultiplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="2"
        android:background="#A4A4A4"
        android:onClick="onClick"
        android:text="*"
        android:textColor="#FFF"

        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/BotonResta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="3"
        android:background="#A4A4A4"
        android:onClick="onClick"
        android:text="-"
        android:textColor="#FFF"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="4"
        android:background="#A4A4A4"
        android:onClick="onClick"
        android:text="+"
        android:textColor="#FFF"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BtnDividir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="5"
        android:background="#A4A4A4"
        android:onClick="onClick"
        android:text="/"
        android:textColor="#FFF"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonHistorico"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="5"

        android:background="#A4A4A4"
        android:onClick="onClick"

        android:text="Historial"
        android:textColor="#FFF"
        tools:ignore="HardcodedText"
        tools:text="Historial" />

    <Button
        android:id="@+id/BotonPorciento"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_row="1"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text="%"
        android:textColor="#6E6E6E"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonRaiz"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_row="2"
        android:background="#01DFA5"
        android:onClick="onClick"
        android:text="âˆš"
        android:textColor="#6E6E6E"

        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/BotonIgual"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_row="5"
        android:layout_columnSpan="7"
        android:background="#A4A4A4"
        android:onClick="onClick"
        android:text="="

        android:textColor="#FFF"
        tools:ignore="HardcodedText" />

</GridLayout>
