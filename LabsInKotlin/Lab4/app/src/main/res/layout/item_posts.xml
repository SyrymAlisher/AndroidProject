<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:orientation="vertical"
    android:background="#19191A">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#19191A">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15sp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TableLayout
            android:layout_width="wrap_content">
            <TableRow>
                <TextView
                    android:id="@+id/author"
                    android:layout_width="211dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="10sp"
                    android:text="Settitle"
                    android:textColor="#fff"
                    android:textSize="15sp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tvPostTime"
                    android:layout_width="211dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12sp"
                    android:layout_marginTop="0sp"
                    android:text="час назад"
                    android:textColor="#636363"
                    android:textSize="11sp" />
            </TableRow>
        </TableLayout>
    </TableRow>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#ffffff"
        android:lineSpacingExtra="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:maxLength="250"
        android:fontFamily="Roboto"
        android:textSize="14sp"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:visibility="visible"
        android:scaleType="fitCenter"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/btnLike"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableLeft="@drawable/ic_favorite_border_black_24dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="855"
            android:textColor="#76787A" />

        <Button
            android:id="@+id/btnComment"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableLeft="@drawable/ic_comment_outline_24"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="855"
            android:textColor="#76787A" />

        <Button
            android:id="@+id/btnRepost"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_share_outline_24"
            android:textColor="#76787A"
            android:background="@null"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="855" />
        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_remove_red_eye_black_24dp"
            />

        <TextView
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="145"
            android:textColor="#888"
            android:textSize="14sp"
            android:textStyle="bold" />
    </TableRow>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        android:background="@color/black">
    </ImageView>
</LinearLayout>







